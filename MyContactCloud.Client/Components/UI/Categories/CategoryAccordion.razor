@using MyContactCloud.Client.Models

<div class="accordion" id="@accordionId">
    @foreach(CategoryDTO category in Categories)
    {
        <CategoryAccordionItem @key="category.Id" AccordionId="@accordionId" Category="category"
                                                                             OnUpdate="OnCategoryUpdate"
                                                                             OnDelete="OnCategoryDelete"/>
    }
</div>

@code {
    [Parameter, EditorRequired]
    public IEnumerable<CategoryDTO> Categories { get; set; } = [];

    [Parameter, EditorRequired]
    public EventCallback<CategoryDTO> OnCategoryUpdate { get; set; }

    [Parameter, EditorRequired]
    public EventCallback<int> OnCategoryDelete { get; set; }

    
    private string accordionId = Guid.NewGuid().ToString();


}
